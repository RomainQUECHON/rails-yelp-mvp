<div class="container">
<h1>Restaurants lists</h1>

<%= link_to "Create a new restaurant", new_restaurant_path, class:"btn btn-primary" %>

<% @restaurants.each do |restaurant| %>
    <div style="width: 400px; border: solid black 1px; padding: 10px ;margin: 20px">
      <h2><%= restaurant.name %></h2>
        <h3><%= restaurant.category %></h3>
        <p><%= restaurant.address %></p>
        <%= link_to "See more details", restaurant_path(restaurant), class:"btn btn-dark" %>
    </div>
  <% end %>
</div>
